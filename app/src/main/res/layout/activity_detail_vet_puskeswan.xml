<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.Detail_Vet_Puskeswan">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/base_orange"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:padding="8dp"
                android:src="@drawable/ic_back" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="48dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvTitle"
                    style="@style/poppinsBold24spWhite"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:text="Diskusi yuk!" />

                <TextView
                    android:id="@+id/tvSubTitle"
                    style="@style/poppinsMed12spWhite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Diskusikan dengan user lain" />
            </LinearLayout>
        </RelativeLayout>

    </androidx.appcompat.widget.Toolbar>

    <RelativeLayout
        android:id="@+id/cardView3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="92dp"
        android:background="@drawable/base_white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/img_peta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@drawable/peta" />

        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="@color/PrimaryColor"
            android:layout_below="@id/img_peta"/>

        <RelativeLayout
            android:id="@+id/lin_namavet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view1"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                style="@style/poppinsSemiBold24spOrange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Toro Vet Clinic"
                android:layout_alignParentStart="true"/>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="4dp"
                android:layout_toStartOf="@+id/jarakLokasi"
                android:layout_centerInParent="true"
                android:src="@drawable/img_lokasi" />

            <TextView
                android:id="@+id/jarakLokasi"
                style="@style/poppinsReg12spOrange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:text="4.37 KM" />

        </RelativeLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lin_namavet"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/poppinsSemiBold14spBlack"
                    android:layout_width="148dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="0dp"
                    android:drawableStart="@drawable/ic_lingkaran"
                    android:gravity="center"
                    android:text="Alamat Outlet" />
                <TextView
                    style="@style/poppinsReg12spBlack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ruko taman Palem Lestari, Jl. Taman Palem Lestari No.23, RT.3/RW.13, Cengkareng Bar., Kecamatan Cengkareng, Kota Jakarta Barat, Daerah Khusus Ibukota Jakarta 11730"
                    android:paddingLeft="40dp"/>

                <TextView
                    style="@style/poppinsSemiBold14spBlack"
                    android:layout_width="170dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="10dp"
                    android:drawableStart="@drawable/ic_lingkaran"
                    android:gravity="center"
                    android:text="Jam Operasional"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/poppinsReg12spBlack"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:paddingLeft="40dp"
                        android:text="Sabtu" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:textColor="@color/black"
                        android:text="09.00–16.30" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        style="@style/poppinsReg12spBlack"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Minggu"
                        android:paddingLeft="40dp"/>
                    <TextView
                        style="@style/poppinsReg12spBlack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="09.00–16.30"
                        android:layout_marginLeft="20dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/poppinsReg12spBlack"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:paddingLeft="40dp"
                        android:text="Senin" />
                    <TextView
                        style="@style/poppinsReg12spBlack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="09.00–16.30"
                        android:layout_marginLeft="20dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        style="@style/poppinsReg12spBlack"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Selasa"
                        android:paddingLeft="40dp"/>
                    <TextView
                        style="@style/poppinsReg12spBlack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="09.00–16.30"
                        android:layout_marginLeft="20dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        style="@style/poppinsReg12spBlack"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Rabu"
                        android:paddingLeft="40dp"/>
                    <TextView
                        style="@style/poppinsReg12spBlack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="09.00–16.30"
                        android:layout_marginLeft="20dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        style="@style/poppinsReg12spBlack"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Kamis"
                        android:paddingLeft="40dp"/>
                    <TextView
                        style="@style/poppinsReg12spBlack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="09.00–16.30"
                        android:layout_marginLeft="20dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        style="@style/poppinsReg12spBlack"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Jumat"
                        android:paddingLeft="40dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="09.00–16.30"
                        android:textColor="@color/black"
                        android:layout_marginLeft="20dp"/>
                </LinearLayout>

                <TextView
                    style="@style/poppinsSemiBold14spBlack"
                    android:layout_width="119dp"
                    android:layout_height="match_parent"
                    android:drawableStart="@drawable/ic_lingkaran"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="Telepon" />
                <TextView
                    style="@style/poppinsReg12spBlack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(021) 5560028"
                    android:paddingLeft="40dp"/>
            </LinearLayout>

        </ScrollView>

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>