<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:layout_marginVertical="8dp"
    android:layout_marginHorizontal="16dp"
    app:cardUseCompatPadding="true"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/baseCover"
            android:layout_width="match_parent"
            android:layout_height="150dp">

        <ImageView
            android:id="@+id/ivArticle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/img_kucing_berantem"/>

        </LinearLayout>

        <TextView
            style="@style/poppinsSemiBold14spOrange"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/baseCover"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="8dp"
            android:id="@+id/tvCategory"
            android:text="Artikel" />
        <TextView
            style="@style/poppinsSemiBold14spBlack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvCategory"
            android:layout_marginHorizontal="16dp"
            android:id="@+id/tvTitle"
            android:text="Kucing Luka Karena Berkelahi" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>