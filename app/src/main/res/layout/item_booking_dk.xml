<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="333dp"
    android:layout_height="189dp"
    android:layout_gravity="center"
    android:padding="10dp"
    android:background="@drawable/border_background"
    android:backgroundTint="@color/PrimaryColor"
   android:elevation="5dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/fotoprofile_dk"
        android:layout_width="56dp"
        android:layout_height="61dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:src="@drawable/usereditprofil" />

    <TextView
        android:id="@+id/namaprofile_beranda_dk"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@+id/fotoprofile_dk"
        android:text="Shafa Shafira"
        android:textSize="15sp"
        android:textColor="@color/white"
        android:fontFamily="@font/poppinsregular"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/namakucing"
        android:layout_width="wrap_content"
        android:layout_height="20sp"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@+id/fotoprofile_dk"
        android:text="Kucing Oyen"
        android:textSize="12sp"
        android:textColor="@color/white"
        android:fontFamily="@font/poppinsregular"
        android:layout_below="@id/namaprofile_beranda_dk"
        android:layout_marginTop="2dp" />

    <ImageView
        android:id="@+id/ic_kalender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/namakucing"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/fotoprofile_dk"
        android:src="@drawable/kalender" />

    <TextView
        android:id="@+id/tgl"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_below="@+id/namakucing"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/ic_kalender"
        android:text="22 Okt"
        android:textSize="12sp"
        android:textColor="@color/white"/>

    <ImageView
        android:id="@+id/ic_jam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/namakucing"
        android:layout_marginStart="25dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/tgl"
        android:src="@drawable/jam" />

    <TextView
        android:id="@+id/jam"
        android:layout_width="wrap_content"
        android:layout_height="20sp"
        android:layout_below="@+id/namakucing"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/ic_jam"
        android:text="09:30 - 10:30"
        android:textSize="12sp"
        android:textColor="@color/white"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_below="@+id/tgl"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp"
        android:orientation="horizontal">
        
        <Button
            android:id="@+id/btn_reject"
            android:layout_width="128dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:background="@drawable/rounded_button_background"
            android:text="Reject"
            android:textSize="15sp"
            android:fontFamily="@font/poppinssemibold"
            android:textAllCaps="false"/>
        <Button
            android:id="@+id/btn_accept"
            android:layout_width="128dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:background="@drawable/white_rounded_stroke"
            android:text="Accept"
            android:textAllCaps="false"
            android:textSize="15sp"
            android:fontFamily="@font/poppinssemibold"/>


    </LinearLayout>


</RelativeLayout>