<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.DoctorDetailActivity">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/base_orange"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:padding="8dp"
            android:src="@drawable/ic_back" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="48dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvTitle"
                    style="@style/poppinsBold24spWhite"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:text="Detail Veneritarian" />

                <TextView
                    android:id="@+id/tvSubTitle"
                    style="@style/poppinsMed12spWhite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Info lengkap veneritarian yang kamu pilih" />
            </LinearLayout>
        </RelativeLayout>

    </androidx.appcompat.widget.Toolbar>

    <RelativeLayout
        android:id="@+id/cardView3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="92dp"
        android:background="@drawable/base_white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/white"
                android:padding="16dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_gravity="center"
                    app:cardCornerRadius="6dp">

                    <ImageView
                        android:id="@+id/cover"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/aji"
                        android:adjustViewBounds="true"
                        android:contentDescription="apa"/>

                </androidx.cardview.widget.CardView>
                <RatingBar
                    android:id="@+id/ratingBar"
                    style="@style/SmallRatingBar"
                    android:layout_width="240dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:numStars="5"
                    android:stepSize="0.1"
                    android:rating="3.5" />

                <View
                    android:id="@+id/divider"
                    android:layout_width="match_parent"
                    android:layout_height="1.5dp"
                    android:layout_weight="1"
                    android:background="@color/grey"/>

                <LinearLayout
                    android:id="@+id/baseNama"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="16dp"
                    android:layout_marginStart="16dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_user"
                        android:tint="@color/PrimaryColor"/>

                    <TextView
                        style="@style/poppinsMed16spBlack"
                        android:id="@+id/tvNama"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="24dp"
                        android:text="Drh. Aji Kusuma" />

                </LinearLayout>

                <View
                    android:id="@+id/divider2"
                    android:layout_width="match_parent"
                    android:layout_height="1.5dp"
                    android:layout_weight="1"
                    android:layout_marginStart="60dp"
                    android:background="@color/grey"/>

                <LinearLayout
                    android:id="@+id/baseInstansi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="16dp"
                    android:layout_marginStart="16dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_location"
                        android:tint="@color/PrimaryColor"/>

                    <TextView
                        style="@style/poppinsMed16spBlack"
                        android:id="@+id/tvInstansi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="24dp"
                        android:text="OJ Pet Care, Batam" />

                </LinearLayout>

                <View
                    android:id="@+id/divider3"
                    android:layout_width="match_parent"
                    android:layout_height="1.5dp"
                    android:layout_weight="1"
                    android:layout_marginStart="60dp"
                    android:background="@color/grey"/>

                <LinearLayout
                    android:id="@+id/baseJadwal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="24dp"
                    android:layout_marginStart="16dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_times"
                        android:tint="@color/PrimaryColor"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                style="@style/poppinsMed16spBlack"
                                android:id="@+id/tvHari"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="24dp"
                                android:text="Senin - Jumat: " />

                            <TextView
                                style="@style/poppinsMed16spBlack"
                                android:id="@+id/tvJam"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="24dp"
                                android:text="08:00 - 15:00 WIB" />

                        </LinearLayout>

                </LinearLayout>

                <View
                    android:id="@+id/divider4"
                    android:layout_width="match_parent"
                    android:layout_height="1.5dp"
                    android:layout_weight="1"
                    android:background="@color/grey"/>

                <RelativeLayout
                    android:id="@+id/cardChat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:padding="16dp"
                    android:background="@drawable/base_card_white">

                    <TextView
                        android:id="@+id/tvChat"
                        style="@style/poppinsSemiBold16spBlack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Konsultasi Melalui Chat"/>
                    <TextView
                        android:id="@+id/tvHarga"
                        style="@style/poppinsSemiBold14spBlack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tvChat"
                        android:text="Rp130.000"/>

                    <TextView
                        android:id="@+id/tvDurasi"
                        style="@style/poppinsMed14spBlack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tvChat"
                        android:layout_marginStart="16dp"
                        android:layout_toEndOf="@+id/tvHarga"
                        android:textColor="@color/grey"
                        android:text="40 menit" />

                    <Button
                        style="@style/poppinsSemiBold16spWhite"
                        android:id="@+id/bt_consultation"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="48dp"
                        android:paddingVertical="4dp"
                        android:paddingHorizontal="24dp"
                        android:background="@drawable/rectangle_rounded"
                        android:drawableRight="@drawable/baseline_chat_24"
                        android:drawablePadding="8dp"
                        android:text="Chat"
                        android:textAllCaps="false" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/cardVidcall"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:padding="16dp"
                    android:background="@drawable/base_card_white">

                    <TextView
                        android:id="@+id/tvVideoChat"
                        style="@style/poppinsSemiBold16spBlack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Konsultasi Melalui Video Chat"/>
                    <TextView
                        android:id="@+id/tvHargaVc"
                        style="@style/poppinsSemiBold14spBlack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tvVideoChat"
                        android:text="Rp130.000"/>

                    <TextView
                        android:id="@+id/tvDurasiVc"
                        style="@style/poppinsMed14spBlack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tvVideoChat"
                        android:layout_marginStart="16dp"
                        android:layout_toEndOf="@+id/tvHargaVc"
                        android:textColor="@color/grey"
                        android:text="30 menit" />

                    <Button
                        style="@style/poppinsSemiBold16spWhite"
                        android:id="@+id/bt_VideoChat"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="48dp"
                        android:paddingVertical="4dp"
                        android:paddingHorizontal="24dp"
                        android:background="@drawable/rectangle_rounded"
                        android:drawableRight="@drawable/ic_videocam"
                        android:drawablePadding="8dp"
                        android:text="VideoCall"
                        android:textAllCaps="false" />
                </RelativeLayout>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </RelativeLayout>

</FrameLayout>