<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="280dp"
        android:layout_height="350dp"
        android:backgroundTint="@color/white"
        app:cardCornerRadius="12dp"
        android:elevation="4dp"
        android:padding="16dp">

        <TextView
            style="@style/poppinsSemiBold24spBlack"
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="16dp"
            android:paddingHorizontal="16dp"
            android:text="Larasati"
            android:gravity="center"/>


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/fotoprofile_dk"
            android:layout_width="159dp"
            android:layout_height="159dp"
            android:layout_below="@+id/include"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            app:civ_border_width="2dp"
            app:civ_border_color="@color/PrimaryColor"
            android:src="@drawable/annisa" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            android:layout_marginBottom="16dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp">
            <ImageButton
                style="@style/poppinsSemiBold16spWhite"
                android:id="@+id/btChat"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:background="@drawable/white_rounded_stroke"
                android:layout_marginEnd="50dp"
                android:src="@drawable/baseline_chat_24"
                android:tint="@color/PrimaryColor"/>

            <ImageButton
                android:id="@+id/btVidcall"
                style="@style/poppinsSemiBold16spWhite"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:background="@drawable/rectangle_rounded"
                android:backgroundTint="@color/PrimaryColor"
                android:src="@drawable/ic_videocam"
                android:textAllCaps="false" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>