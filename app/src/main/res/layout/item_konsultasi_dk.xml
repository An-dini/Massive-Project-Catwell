<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="333dp"
    android:layout_height="141dp"
    android:layout_marginStart="34dp"
    android:padding="16dp"
    android:background="@drawable/base_card">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iVfotoprofile_dk"
        android:layout_width="80dp"
        android:layout_height="87dp"
        android:src="@drawable/usereditprofil" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/iVfotoprofile_dk"
        android:orientation="vertical"
        android:paddingStart="16dp">

        <TextView
            style="@style/poppinsSemiBold14spBlack"
            android:id="@+id/tvDoctorName"
            android:text="Shafa Shafira"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/tvKucingName"
            android:text="Kucing Oyen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_clock"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="09:30 - 10:30"
                android:layout_marginStart="5dp"/>
        </LinearLayout>

    </LinearLayout>


</RelativeLayout>