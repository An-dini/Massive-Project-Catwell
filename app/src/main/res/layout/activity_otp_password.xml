<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.ForgotPassword"
    android:background="@color/white">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/base_orange"
        android:minHeight="?attr/actionBarSize"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:padding="8dp"
                android:src="@drawable/ic_back" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="48dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvTitle"
                    style="@style/poppinsBold24spWhite"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:text="Diskusi yuk!" />

                <TextView
                    android:id="@+id/tvSubTitle"
                    style="@style/poppinsMed12spWhite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Diskusikan dengan user lain" />
            </LinearLayout>
        </RelativeLayout>

    </androidx.appcompat.widget.Toolbar>

    <RelativeLayout
        android:id="@+id/cardView3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="92dp"
        android:background="@drawable/base_white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="50dp">

            <TextView
                style="@style/poppinsMed14spBlack"
                android:id="@+id/txv1"
                android:layout_width="275dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="100dp"
                android:gravity="center"
                android:text="Silahkan Masukkan 4 Digit Kode Yang Dikirim Ke meowbib@gmail.com" />

            <LinearLayout
                android:id="@+id/line_otp"
                android:layout_width="276dp"
                android:layout_height="64dp"
                android:layout_marginTop="30dp"
                android:gravity="center_horizontal"
                android:layout_below="@+id/txv1"
                android:orientation="horizontal">

                <EditText
                    style="@style/poppinsBold16spOrange"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_below="@id/txv2"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/PrimaryColor"
                    android:maxLength="1"
                    android:textAlignment="center"
                    android:background="@drawable/rectangle_rounded_stroke"
                    android:paddingLeft="10dp" />

                <EditText
                    style="@style/poppinsBold16spOrange"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_below="@id/txv2"
                    android:layout_marginLeft="10dp"
                    android:maxLength="1"
                    android:textAlignment="center"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/rectangle_rounded_stroke" />

                <EditText
                    style="@style/poppinsBold16spOrange"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_below="@id/txv2"
                    android:maxLength="1"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:textAlignment="center"
                    android:background="@drawable/rectangle_rounded_stroke"/>

                <EditText
                    style="@style/poppinsBold16spOrange"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_below="@id/txv2"
                    android:maxLength="1"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:textAlignment="center"
                    android:background="@drawable/rectangle_rounded_stroke" />

            </LinearLayout>

            <Button
                style="@style/poppinsSemiBold16spWhite"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:background="@drawable/rectangle_rounded"
                android:layout_below="@id/line_otp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:id="@+id/btVerif"
                android:text="Verifikasi"
                android:textAllCaps="false" />
        </RelativeLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>