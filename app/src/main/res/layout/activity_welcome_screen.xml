<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_kucing"
    tools:context=".view.WelcomeScreenActivity">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="150dp"
        android:src="@drawable/logo_catwell"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/imageView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <Button
            style="@style/poppinsSemiBold16spWhite"
            android:id="@+id/btDaftar"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:paddingHorizontal="64dp"
            android:background="@drawable/rectangle_rounded_stroke_transparent"
            android:text="Daftar" />

        <LinearLayout
            android:id="@+id/divider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:gravity="center">

            <View
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:layout_weight="1"
                android:background="@color/white"/>

            <TextView
                style="@style/poppinsSemiBold16spWhite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ATAU"
                android:textColor="@color/white"
                android:layout_margin="5dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:layout_weight="1"
                android:background="@color/white"/>
        </LinearLayout>

        <Button
            style="@style/poppinsSemiBold16spWhite"
            android:id="@+id/btMasuk"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:background="@drawable/rectangle_rounded"
            android:paddingHorizontal="64dp"
            android:text="Masuk"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>