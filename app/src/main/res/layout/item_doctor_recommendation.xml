<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="360dp"
    android:layout_height="155dp"
    android:padding="16dp"
    android:layout_marginStart="8dp"
    android:background="@drawable/base_card">

    <ImageView
        android:id="@+id/ivDoctor"
        android:layout_width="70dp"
        android:layout_height="85dp"
        android:scaleType="fitXY"
        android:src="@drawable/dr_aji" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/ivDoctor"
        android:orientation="vertical"
        android:paddingStart="16dp">

        <TextView
            style="@style/poppinsSemiBold14spBlack"
            android:id="@+id/tvDoctorName"
            android:text="Dr. Aji"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"/>

        <TextView
            style="@style/poppinsReg12spBlack"
            android:id="@+id/tvVetName"
            android:text="OJ Pet Care, Batam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            style="@style/poppinsSemiBold14spOrange"
            android:id="@+id/tvPrice"
            android:text="Rp130.000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"/>
    </LinearLayout>

    <Button
        style="@style/poppinsBold12spWhite"
        android:id="@+id/btKonsultasi"
        android:background="@drawable/rounded_button_background"
        android:text="Chat"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginStart="65dp"
        android:layout_marginTop="8dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>